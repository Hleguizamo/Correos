{% extends 'base.html.twig' %}

{% block body %}
    <h1>Grupo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grupo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ grupo.nombre }}</td>
            </tr>
            <tr>
                <th>Fechacreado</th>
                <td>{% if grupo.fechaCreado %}{{ grupo.fechaCreado|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Clasificacion</th>
                <td>{{ grupo.clasificacion }}</td>
            </tr>
            <tr>
                <th>Integrantes</th>
                <td>{{ grupo.integrantes }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ grupo.descripcion }}</td>
            </tr>
            <tr>
                <th>Agruparproveedor</th>
                <td>{{ grupo.agruparProveedor }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('grupo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('grupo_edit', { 'id': grupo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
