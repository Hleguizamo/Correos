            modal:true,
            text: '¿Confirma el cierre de sesión?',
            buttons: [
                {addClass: 'btn btn-danger', text: 'ACEPTAR', onClick: function($noty) {

                	noty({layout:'center',text:'<strong>Cerrando sesión. Por favor espere...</strong><br><center><i class="fa fa-spinner fa-spin fa-3x fa-fw margin-bottom"></i></center>',modal:true,type:'alert',timeout:false,closeWith:['none']}); 

