                }},
                {addClass: 'btn btn-primary', text: 'CANCELAR', onClick: function($noty) {
                    $noty.close();
                }}
            ],
            type : 'alert',
            animation:{open:'animated flipInX',close : 'animated flipOutX'},
            timeout: false
        });
		});

		
	});

